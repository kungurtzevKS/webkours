<%- include('./header.ejs') %>

<div class="news">
    <div class="row mt-3">
        <div class="col text-center">
            <h3>Новости</h3>
        </div>
    </div>

    <div class="container">
        <% news.forEach(post => { %>
            <div class="row mb-2">
                <div class="col card news-card">
                    <div class="row">
                        <h4 class="ml-4"><%- post.title %></h4>
                    </div>
                    <div class="row">
                        <img class="col-md-12" src="<%- post.img %>" alt="">
                    </div>
                    <div class="row mt-3 ml-4">
                        <p><%- post.text %> </p>
                    </div>
                </div>
            </div>
         <% }) %> 
    </div>

</div>